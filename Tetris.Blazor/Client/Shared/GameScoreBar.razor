@using Tetris.Blazor.Shared.Entities;

<MudStack Row="true" Justify="Justify.SpaceBetween">
  <MudPaper Elevation="0" Class="px-3 py-1 mb-1">
    <MudText Typo="Typo.body2">Level: @Level</MudText>
  </MudPaper>
  <MudPaper Elevation="0" Class="px-3 py-1 mb-1">
    <MudText Typo="Typo.body2">Score: @Score</MudText>
  </MudPaper>
</MudStack>

@code {
  [Parameter]
  public IGame Game { get; set; }

  private string Level => Game?.Level.ToString() ?? "0";
  private string Score => Game?.Score.ToString() ?? "0";
}
